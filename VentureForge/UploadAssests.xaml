<Window
    x:Class="VentureForge.UploadAssests"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VentureForge"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UploadAssests"
    Width="800"
    Height="450"
    Background="#04c582"
    mc:Ignorable="d">
    <Border
        Margin="20"
        Background="#2e3137"
        CornerRadius="20">
        <StackPanel>
            <Label
                HorizontalAlignment="Center"
                Content="Upload Assets"
                FontFamily="Georgia"
                FontSize="35"
                Foreground="White" />
            <Grid>
                <Button
                    x:Name="Home"
                    Width="75"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#545d6a"
                    Click="Home_Click"
                    Content="Home"
                    FontFamily="Georgia"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    x:Name="UploadFile"
                    Width="210"
                    Margin="110,90,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#545d6a"
                    Click="UploadFile_Click"
                    Content="Chose a File to Upload"
                    FontFamily="Georgia"
                    FontSize="18"
                    Foreground="White" />
                <Button
                    x:Name="Login"
                    Width="75"
                    Margin="685,-6,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#545d6a"
                    Click="Login_Click"
                    Content="Login"
                    FontFamily="Georgia"
                    FontSize="14"
                    Foreground="White"
                    RenderTransformOrigin="1.481,0.495" />
                <Button
                    x:Name="SignIn"
                    Width="75"
                    Margin="610,-6,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#545d6a"
                    Click="SignIn_Click"
                    Content="Sign In"
                    FontFamily="Georgia"
                    FontSize="14"
                    Foreground="White" />
                <Button
                    x:Name="CreateTable"
                    Width="150"
                    Margin="110,150,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#545d6a"
                    Click="CreateTable_Click"
                    Content="Create Table"
                    FontFamily="Georgia"
                    FontSize="18"
                    Foreground="White" />
                <TextBox
                    x:Name="myTextBox"
                    Width="120"
                    Margin="380,95,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#545d6a"
                    Foreground="White"
                    Text=""
                    TextWrapping="Wrap" />
                <Button
                    x:Name="PreviousPage"
                    Width="75"
                    Margin="75,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#545d6a"
                    Click="PreviousPage_Click"
                    Content="Back"
                    FontFamily="Georgia"
                    FontSize="14"
                    Foreground="White" />
                <Image Margin="470,140,22,-96" Source="/Ludo.png" />
            </Grid>

        </StackPanel>
    </Border>
</Window>
