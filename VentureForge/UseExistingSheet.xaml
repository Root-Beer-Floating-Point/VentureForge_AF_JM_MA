<Window
    x:Class="VentureForge.UseExistingSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VentureForge"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UseExistingSheet"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Home_Click"
            Content="Home" />
        
       
        
        
        

        <Border
            x:Name="MainBorder"
            
            Margin="10,80,10,10"
            BorderBrush="Black"
            BorderThickness="2">
            <ScrollViewer>
                <StackPanel x:Name="SheetContainer" />
            </ScrollViewer>

        </Border>
        <Button
            x:Name="Back"
            Margin="75,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Back_Click"
            Content="Back"
            RenderTransformOrigin="0.613,0.588" />
        <TextBlock x:Name ="CreatorName" HorizontalAlignment="Left" Margin="80,45,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
